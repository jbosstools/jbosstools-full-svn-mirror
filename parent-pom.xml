					</url>
					<layout>p2</layout>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
					</releases>
				</repository>
			</repositories>
		</profile>
		<profile>
			<id>svn-repos</id>
			<activation>
				<property>
					<name>svn</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>subclipse16</id>
					<url>http://subclipse.tigris.org/update_1.6.x/</url>
					<layout>p2</layout>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
					</releases>
				</repository>
				<repository>
					<id>subversive07</id>
					<url>http://download.eclipse.org/technology/subversive/0.7/update-site/</url>
					<layout>p2</layout>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<releases>
