<project default="getBaseEclipse">
	<loadproperties srcFile="build.properties"/>

	<target name="build.requirement">
		<available file="${buildDirectory}/../eclipse-SDK.zip" property="baseExists"/>
		<available file="${buildDirectory}/startup.jar" property="isUnzipped" />
		<antcall target="getBaseEclipse" inheritall="true"/>
		<antcall target="unzipEclipse" inheritall="true"/>

		<echo file="return.properties">
			eclipseInstallDir=${eclipseInstallDir}
		</echo>
	</target>
	<target name="getBaseEclipse" unless="baseExists">
		<get src="${eclipseURL}/eclipse-SDK-${eclipseBuildID}-win32.zip" dest="${eclipseInstallDir}/eclipse-SDK.zip"/>
	</target>

	<target name="unzipEclipse" unless="isUnzipped">
		<unzip src="${eclipseInstallDir}/eclipse-SDK.zip" dest="${eclipseInstallDir}"/>
	</target>
</project>
