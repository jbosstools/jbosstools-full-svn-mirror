	               		</instanceof>
	               	</iterate>
               </with>
            </visibleWhen>
         </command>
		<!-- instance commands -->
         <command
               commandId="org.jboss.tools.deltacloud.ui.startinstance"
               disabledIcon="icons/runningd.gif"
               icon="icons/running.gif"
               label="%command.label.4"
               style="push"
               tooltip="%command.tooltip.4">
            <visibleWhen
                  checkEnabled="true">
               <with
