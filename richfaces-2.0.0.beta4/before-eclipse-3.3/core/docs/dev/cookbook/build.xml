<project name="extend-documentation" default="extend.doc" basedir=".">

    <!-- Set the following property to generate the doco in the output folder -->
    <!--property name="build.dir"             value="${basedir}/../../output/docs/guide"/-->

    <property name="pdf.name" value="JBossIDE-Cookbook.pdf" />
    <import file="../../../docbook-support/support.xml" />

    <target name="extend.doc" depends="clean">
		<antcall target="lang.all"><param name="lang" value="en"/></antcall>
		<antcall target="build.exampleProjects"></antcall>
	 </target>

	<target name="build.exampleProjects">
		<zip destfile="build/exampleProjects.zip" basedir="exampleWorkspace"
			excludes="**/CVS"/>
	</target>
        
    <!-- Use this alternate target to enable uptodate checking, i.e.
         don't generate docs if nothing has changed
    <target name="all.doc">
        <antcall target="lang.all.run"><param name="lang" value="en"/></antcall>
    </target>
    -->

</project>
