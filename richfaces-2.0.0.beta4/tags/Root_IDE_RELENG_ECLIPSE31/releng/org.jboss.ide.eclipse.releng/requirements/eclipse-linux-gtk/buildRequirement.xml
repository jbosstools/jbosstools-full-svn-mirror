<project>

	<target name="build.requirement">
		<property file="build.properties"/>
		<property file="../eclipse/build.properties"/>
		
		<property name="ext" value="tar.gz"/>
		<property name="os" value="linux-gtk"/>
		
		<property name="eclipseArchiveName"
			value="eclipse-SDK-${eclipseBuildID}-linux-gtk.tar.gz"/>
		
		<available file="${eclipseInstallDir}/eclipse-SDK-${os}.${ext}" property="archiveExists"/>
		<available file="${eclipseInstallDir}/eclipse/startup.jar" property="isUnzipped"/>
		
		<ant dir="../eclipse" antfile="../eclipse/buildRequirement.xml" target="getBaseEclipse"/>
	</target>
</project>