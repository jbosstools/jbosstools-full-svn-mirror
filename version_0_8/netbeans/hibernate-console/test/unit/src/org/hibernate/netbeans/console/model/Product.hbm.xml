<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="org.hibernate.netbeans.console.model.Product" table="hc_product">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="version"/>
        <property name="weight"/>
        <property name="price"/>

        <set name="stores" lazy="true">
            <key column="product_id"/>
            <one-to-many class="org.hibernate.netbeans.console.model.Store"/>
        </set>

        <component name="owner" class="org.hibernate.netbeans.console.model.ProductOwner">
            <property name="firstName"/>
            <property name="lastName"/>
            <one-to-one name="address" class="org.hibernate.netbeans.console.model.ProductOwnerAddress"/>
        </component>
    </class>
        
</hibernate-mapping>