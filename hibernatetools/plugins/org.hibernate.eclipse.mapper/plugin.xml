<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

     <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="content-type.hbm.xml"
            name="Hibernate Mapping Content-Type"
            priority="normal">
         <describer class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
            <parameter
                  name="element"
                  value="hibernate-mapping"/>
         </describer>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            file-names="hibernate.cfg.xml"
            id="content-type.cfg.xml"
            name="Hibernate Configuration Content-type"
            priority="normal">
            <describer class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
            <parameter
                  name="element"
                  value="hibernate-configuration"/>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.wst.sse.core.modelHandler">
         <modelHandler
               associatedContentTypeId="org.hibernate.eclipse.mapper.content-type.hbm.xml"
               class="org.hibernate.eclipse.mapper.modelhandler.ModelHandlerForHBMXML"
               default="false"
               id="org.hibernate.eclipse.mapper.handler.hbm.xml">
         </modelHandler>
         <modelHandler
               associatedContentTypeId="org.hibernate.eclipse.mapper.content-type.cfg.xml"
               class="org.hibernate.eclipse.mapper.modelhandler.ModelHandlerForCFGXML"
               default="false"
               id="org.hibernate.eclipse.mapper.handler.cfg.xml">
         </modelHandler>
   </extension>
   <extension
         point="org.eclipse.wst.sse.ui.extendedconfiguration">
      <configuration
            class="org.hibernate.eclipse.mapper.editors.HBMXMLStructuredTextViewerConfiguration"
            target="org.hibernate.eclipse.mapper.content-type.hbm.xml"
            type="textviewerconfiguration"/>
	  <configuration
            class="org.hibernate.eclipse.mapper.editors.CFGXMLStructuredTextViewerConfiguration"
            target="org.hibernate.eclipse.mapper.content-type.cfg.xml"
            type="textviewerconfiguration"/>            
   </extension>
   <extension
         point="org.eclipse.wst.sse.ui.adapterFactoryDescription">
      <adapterFactoryDescription
            class="org.hibernate.eclipse.mapper.registry.AdapterFactoryProviderForHBMXML">
      </adapterFactoryDescription>         
      <adapterFactoryDescription
            class="org.hibernate.eclipse.mapper.registry.AdapterFactoryProviderForCFGXML">
      </adapterFactoryDescription>         
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="hibernatecategory"
            class="org.hibernate.eclipse.mapper.views.FormView"
            icon="icons/sample.gif"
            id="org.hibernate.eclipse.mapper.views.FormView"
            name="Form View"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.hibernate.eclipse.mapper.editors.ReverseEngineeringMultiPageEditor"
            contributorClass="org.hibernate.eclipse.mapper.editors.ReverseEngineeringMultiPageEditorContributor"
            extensions="override.reveng.xml"
            icon="icons/hibernate_small_icon.gif"
            id="org.hibernate.eclipse.mapper.editors.ReverseEngineeringMultiPageEditor"
            name="Hibernate reverse engineering editor"/>
   </extension>
  </plugin>
