<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.jboss.ide.eclipse.xdoclet.core"
   name="%plugin.name"
   version="1.5.0"
   provider-name="%plugin.provider"
   class="org.jboss.ide.eclipse.xdoclet.core.XDocletCorePlugin">

   <runtime>
      <library name="org-jboss-ide-eclipse-xdoclet-core.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.jboss.ide.eclipse.core"/>
      <import plugin="org.jboss.ide.eclipse.ui"/>
      <import plugin="org.eclipse.ant.core"/>
   </requires>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%org.jboss.ide.eclipse.xdoclet.core.ui.MainPreferencePage"
            category="org.jboss.ide.eclipse.ui.MainPreferencePage"
            class="org.jboss.ide.eclipse.xdoclet.core.ui.MainPreferencePage"
            id="org.jboss.ide.eclipse.xdoclet.core.ui.MainPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <file-association
            file-names="xdoclet-build.xml"
            content-type="antBuildFile">
      </file-association>
   </extension>

</plugin>
