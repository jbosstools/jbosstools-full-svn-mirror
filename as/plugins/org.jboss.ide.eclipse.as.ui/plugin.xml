<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="ServerViewExtension" name="org.jboss.ide.eclipse.as.ui.serverViewExtension" schema="schema/ServerViewExtension.exsd"/>
   
   <extension
         point="org.eclipse.wst.server.ui.serverImages">
      <image
            icon="icons/jboss.gif"
            typeIds="org.jboss.ide.eclipse.as.32"
            id="org.jboss.ide.eclipse.as.ui.jboss32Image"/>
      <image
            icon="icons/jboss.gif"
            typeIds="org.jboss.ide.eclipse.as.40"
            id="org.jboss.ide.eclipse.as.ui.jboss40Image"/>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.wizardFragments">
      <fragment
            class="org.jboss.ide.eclipse.as.ui.wizards.JBoss32WizardFragment"
            typeIds="org.jboss.ide.eclipse.as.32"
            id="org.jboss.ide.eclipse.as.ui.jboss32WizardFragment"/>
      <fragment
            class="org.jboss.ide.eclipse.as.ui.wizards.JBoss40WizardFragment"
            typeIds="org.jboss.ide.eclipse.as.40"
            id="org.jboss.ide.eclipse.as.ui.jboss40WizardFragment"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.jboss.ide.eclipse.as.ui.config.JBossLaunchConfigurationTabGroup"
            id="org.jboss.ide.eclipse.as.core.jbossLaunchTabGroup"
            type="org.jboss.ide.eclipse.as.core.jbossLaunch"/>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup />
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.wst.server.ui"
            class="org.jboss.ide.eclipse.as.ui.views.JBossServerView"
            icon="icons/jboss.gif"
            id="org.jboss.ide.eclipse.as.ui.views.JBossServerView"
            name="JBoss Server View"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.jboss.ide.eclipse.as.ui.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.serverImages">
      <image
            icon="icons/J2EEModule16.gif"
            id="org.jboss.ide.eclipse.as.ui.archiveImage"
            typeIds="jboss.archive"/>
      <image
            icon="icons/AppClientModule16.gif"
            id="org.jboss.ide.eclipse.as.ui.earImage"
            typeIds="jboss.ear"/>
      <image
            icon="icons/WebModule16.gif"
            id="org.jboss.ide.eclipse.as.ui.webImage"
            typeIds="jboss.web"/>
      <image
            icon="icons/EJBModule16.gif"
            id="org.jboss.ide.eclipse.as.ui.ejbImage"
            typeIds="jboss.ejb"/> 
   </extension>
   <extension
         point="org.jboss.ide.eclipse.as.ui.ServerViewExtension">
      <ViewProvider
            description="Allow modules to be included in the tree."
            icon="icons/J2EEModule16.gif"
            id="org.jboss.ide.eclipse.as.ui.ModulesViewProvider"
            name="Modules"
            providerClass="org.jboss.ide.eclipse.as.ui.viewproviders.ModuleViewProvider"/>
      <ViewProvider
            description="Keep a log of server-related events in the view."
            icon="icons/file-info.png"
            id="org.jboss.ide.eclipse.as.ui.EventLogProvider"
            name="Event Log"
            providerClass="org.jboss.ide.eclipse.as.ui.viewproviders.EventLogViewProvider"/>
      <ViewProvider
            description="Lists inactive categories and allows you to turn them back on."
            icon="icons/inactiveCat.gif"
            id="org.jboss.ide.eclipse.as.ui.InactiveExtensionsProvider"
            name="Inactive Categories"
            providerClass="org.jboss.ide.eclipse.as.ui.viewproviders.InactiveExtensionViewProvider"/>
      <ViewProvider
            description="descriptor xpaths"
            icon="icons/xml.gif"
            id="org.jboss.ide.eclipse.as.ui.ViewProvider1"
            name="Descriptor XPaths"
            providerClass="org.jboss.ide.eclipse.as.ui.viewproviders.DescriptorXPathViewProvider"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.jboss.ide.eclipse.ui.MainPreferencePage"
            class="org.jboss.ide.eclipse.as.ui.preferencepages.JBossServersPreferencePage"
            id="org.jboss.ide.eclipse.as.ui.jbossServerPreferencePage"
            name="JBoss Servers"/>
      <page
            category="org.jboss.ide.eclipse.as.ui.jbossServerPreferencePage"
            class="org.jboss.ide.eclipse.as.ui.preferencepages.ViewPreferencePage"
            id="org.jboss.ide.eclipse.as.ui.jbossServerViewPrefPage"
            name="View"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="servicexml"
            name="JBoss Service XML"
            priority="normal">
         <describer class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
            <parameter
                  name="element"
                  value="server"/>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.wst.sse.ui.editorConfiguration">
      <sourceViewerConfiguration
            class="org.jboss.ide.eclipse.as.ui.editors.ServiceXMLEditorConfiguration"
            target="org.jboss.ide.eclipse.as.ui.servicexml"/>
      <contentOutlineConfiguration
            class="org.jboss.ide.eclipse.as.ui.editors.ServiceXMLOutlineConfiguration"
            target="org.jboss.ide.eclipse.as.ui.servicexml"/>
   </extension>
   <extension
         point="org.eclipse.wst.sse.core.modelHandler">
      <modelHandler
            associatedContentTypeId="org.jboss.ide.eclipse.as.ui.servicexml"
            class="org.jboss.ide.eclipse.as.ui.editors.ServicexmlModelHandler"
            default="false"
            id="org.jboss.ide.eclipse.as.ui.servicexmlModelHandler"/>
   </extension>
   <extension point="org.eclipse.wst.sse.ui.adapterFactoryDescription">
		<adapterFactoryDescription
				class="org.jboss.ide.eclipse.as.ui.editors.AdaptorFactoryProviderForServiceXML"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jboss.ide.eclipse.as.ui.MBeanComponentsCategory"
            name="MBean Components"
            parentCategory="org.jboss.ide.eclipse.ui.wizards"/>
      <wizard
            category="org.jboss.ide.eclipse.as.ui.MBeanComponentsCategory"
            class="org.jboss.ide.eclipse.as.ui.wizards.NewMBeanWizard"
            id="org.jboss.ide.eclipse.as.ui.MBeanComponents"
            name="MBean Stubs"
            project="false"/>
   </extension>

