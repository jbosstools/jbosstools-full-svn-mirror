<tests>
	<test id="id1">
		<SPAN CLASS="vpe-text">
			<OL>
				<LI>
					{blog.text}
                    </LI>
			</OL>
			<BR VPE:PSEUDO-ELEMENT="yes"
				STYLE="font-style: italic; color: green; -moz-user-modify: read-only;" />
		</SPAN>
	</test>
	<test id="id2">
		<SPAN CLASS="vpe-text">
			<SPAN CLASS="vpe-text">
				It's easy to make *emphasis*, |monospace|,~deleted text~, super^scripts^ or _underlines_.
        </SPAN>
		</SPAN>
	</test>

	<test id="id3">
		<SPAN CLASS="vpe-text">
			<P>
				It's easy to make
				<B>
					emphasis
                </B>
				,
				<TT>
					monospace
                </TT>
				,
				<DEL>
					deleted text
                </DEL>
				, super
				<SUP>
					scripts
                </SUP>
				or
				<U>
					underlines
                </U>
				.
			</P>
			<BR VPE:PSEUDO-ELEMENT="yes"
				STYLE="font-style: italic; color: green; -moz-user-modify: read-only;" />
		</SPAN>
	</test>
</tests>