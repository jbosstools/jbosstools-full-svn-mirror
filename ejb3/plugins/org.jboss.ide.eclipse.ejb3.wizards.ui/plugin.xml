<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.jboss.ide.eclipse.ejb3.wizards.ui"
   name="EJB3 Wizards UI Plug-in"
   version="1.0.0"
   provider-name="JBoss Inc"
   class="org.jboss.ide.eclipse.ejb3.wizards.ui.EJB3WizardsUIPlugin">

   <runtime>
      <library name="ejb3-wizards-ui.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.jboss.ide.eclipse.ejb3.wizards.core"/>
      <import plugin="org.eclipse.jdt"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.jdt.source"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.jboss.ide.eclipse.jdt.aop.core"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.jboss.ide.eclipse.launcher.core"/>
      <import plugin="org.jboss.ide.eclipse.launcher.ui"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
   </requires>
   <extension
         id="org.jboss.ide.eclipse.ejb3.wizards.ui.NewStatelessSessionBeanWizard"
         point="org.eclipse.ui.newWizards">
      <category
            name="EJB 3.0"
            id="org.jboss.ide.eclipse.ejb3.wizards.ui.ejb3Category"/>
      <wizard
            icon="icons/full/ctool16/newjprj_wiz.gif"
            class="org.jboss.ide.eclipse.ejb3.wizards.ui.wizards.NewEJB3ProjectWizard"
            category="org.jboss.ide.eclipse.ejb3.wizards.ui.ejb3Category"
            project="true"
            name="EJB 3.0 Project"
            id="org.jboss.ide.eclipse.ejb3.wizards.ui.NewEJB3ProjectWizard"/>
      <wizard
            icon="icons/full/ctool16/newclass_wiz.gif"
            class="org.jboss.ide.eclipse.ejb3.wizards.ui.wizards.NewSessionBeanWizard"
            category="org.jboss.ide.eclipse.ejb3.wizards.ui.ejb3Category"
            name="Session Bean"
            id="org.jboss.ide.eclipse.ejb3.wizards.ui.NewEJB3ProjectWizard"/>
      <wizard
            icon="icons/full/ctool16/newclass_wiz.gif"
            class="org.jboss.ide.eclipse.ejb3.wizards.ui.wizards.NewMessageDrivenBeanWizard"
            category="org.jboss.ide.eclipse.ejb3.wizards.ui.ejb3Category"
            name="Message Driven Bean"
            id="org.jboss.ide.eclipse.ejb3.wizards.ui.NewMessageDrivenBeanWizard"/>
   </extension>

</plugin>
